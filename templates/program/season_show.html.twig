{% extends 'base.html.twig' %}

{% block title %}
	{{ program.title }}
	- Season
	{{ season.number }}
{% endblock %}

{% block body %}
	<div class="media">
		<img class="align-self-start mr-3" src="{{ program.poster }}" alt="{{ program.title }} poster">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.synopsis }}</p>
			<p>Category :
				{{ program.category.name }}</p>
			<h2>Season number
				{{ season.number }}</h2>
			<p>Year
				{{ season.year }}</p>
			<p>{{ season.description }}</p>
			<h3>List of episodes</h3>
			<ol>
				{% for episode in episodes %}
					<a href="{{ path("program_episode_show", { program: program.id, season: season.id, episode: episode.id }) }}">
						<ul>Episode
							{{ episode.number }}
							-
							{{ episode.title }}</ul>
					</a>
				{% endfor %}
			</ol>
		</div>
	</div>

	<a href="{{ path('program_show', { program: program.id }) }}">
		Back to the list of seasons.
	</a>
	<br>
	<a href="{{ path('program_index') }}">
		Back to program index
	</a>
	<br>
	<a href="{{ path('category_index') }}">
		Back to category index
	</a>
{% endblock %}
